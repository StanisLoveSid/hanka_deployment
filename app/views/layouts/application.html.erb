<!DOCTYPE html>
<html>
  <head>
    <title>DiabetDiary</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
  </head>
   <body>
  <header style="margin-bottom: 5%;">
        <nav class="navbar navbar-default navigation-clean-button" style="background-color: #48b722;">
            <div class="container">
                <div class="navbar-header">  <%= link_to(root_path, class: "navbar-brand", style: "margin-bottom: 30%; color: #ffffff") do %>
  <h2>HANKA</h2>
  <% end %>
  <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
  </div>
  <div class="collapse navbar-collapse" id="navcol-1">
                    <% if user_signed_in? %>
                    <ul class="nav navbar-nav" style="padding-top: 22px;">
                      <% if current_user.years.any? && current_user.years.first.months.any? && current_user.years.first.months.first.days.any?   %>
                        <li role="presentation"><%= link_to "/years/#{current_user.years.first.id}" do %><h5 style="color: #ffffff">Current year</h5> <% end %></li>
                        <li role="presentation"><%= link_to "/years/#{current_user.years.first.id}/months/#{current_user.years.first.months.first.id}" do %><h5 style="color: #ffffff">Current month</h5> <% end %></li>
                        <li role="presentation"><%= link_to "/years/#{current_user.years.first.id}/months/#{current_user.years.first.months.first.id}/days/#{current_user.years.first.months.first.days.last.id}" do %><h5 style="color: #ffffff">Current day</h5> <% end %></li>
                        <% end %>
               <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#" style="color: #ffffff"><h5>Profile <span class="caret"></span></h5></a>
                            <ul class="dropdown-menu" role="menu">
                                <li role="presentation"><%= link_to "#{current_user.role == 'doctor' ? 'Find patient' : 'Find doctor'}", users_path %></li>
                                <li role="presentation"><%= link_to "Settings", edit_user_registration_path %></li>
                            </ul>
                        </li>
                    </ul>
                    <% end %>
                    <% if user_signed_in? %>
                      <p class="navbar-text navbar-right actions" style="padding-top: 32px;">
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-default action-button", role: "button", style: "background-color: #d84b6b;" %>
                      </p>
                    <% else %>
  <p class="navbar-text navbar-right actions" style="padding-top: 32px;"><%= link_to "Log in", new_user_session_path, class: "navbar-link login", style: "color: #ffffff"%><%= link_to "Sign up", new_user_registration_path,class: "btn btn-default action-button",style: "background-color: #d84b6b;" %></p>
                    <% end %>
                </div>
            </div>
        </nav>
  </header>
  <main class="container">
  <% flash.each do |name, msg|%>
  <%= msg %>
  <% end %>
    <%= yield %>
  </main>
    <footer id="myFooter">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <h2 class="logo"><a href="#"> HANKA </a></h2>
                </div>
                <div class="col-sm-2">
                    <h5>Get started</h5>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Sign up</a></li>
                        <li><a href="#">Downloads</a></li>
                    </ul>
                </div>
                <div class="col-sm-2">
                    <h5>About us</h5>
                    <ul>
                        <li><a href="#">Company Information</a></li>
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Reviews</a></li>
                    </ul>
                </div>
                <div class="col-sm-2">
                    <h5>Support</h5>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Help desk</a></li>
                        <li><a href="#">Forums</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <div class="social-networks">
                        <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                        <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="google"><i class="fa fa-google-plus"></i></a>
                    </div>
                    <button type="button" class="btn btn-default">Contact us</button>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <p>Â© 2018 All rights reserved </p>
        </div>
    </footer>
  <script src="https://use.fontawesome.com/67602d7308.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>
</html>
