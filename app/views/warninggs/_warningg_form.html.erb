    <%= form_for([@year, @month, @day, @warningg], remote: true ) do |f| %>
    <div id="warning_<%= @warningg.id %>">
      <p scope="row"><%= f.text_field :reason, class: "form-control", placeholder: "reason" %></p>
      <p><%= f.text_field :description, class: "form-control", placeholder: "description" %></p>
      <p><%= f.text_field :begining, class: "form-control", placeholder: "time", id: "#{@warningg.id}_time", value: "#{@warningg.begining.to_datetime.strftime('%H:%M')}" %></p>
      <p><%= f.text_field :ending, class: "form-control", placeholder: "time", id: "#{@warningg.id}_time", value: "#{@warningg.ending.to_datetime.strftime('%H:%M')}" %></p>      
      <p></p>
      <p><%= f.submit "Update", class: "btn btn-primary btn-lg btn-block login-button", style: "padding: 5px;" %></p>
    </div>
<% end %>



